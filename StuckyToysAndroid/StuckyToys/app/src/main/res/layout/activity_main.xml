<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical" tools:context=".MainActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/imgBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/bus"
            android:adjustViewBounds="true"
            android:layout_marginBottom="10dip"/>

        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/imgBus"
            android:paddingTop="165dp">


            <TableRow
                android:layout_marginBottom="10dp"
                android:background="#b3e1df">
                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/email"/>

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:layout_marginRight="10dp"
                    android:inputType="textEmailAddress"
                    android:textCursorDrawable="@null" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp"
                android:background="#b3e1df">
                <TextView
                    android:id="@+id/txtPassword"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/password"/>

                <EditText
                    android:id="@+id/editPassword"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:layout_marginRight="10dp"
                    android:textCursorDrawable="@null"
                    android:inputType="textPassword" />
            </TableRow>

          <TableRow
            android:layout_marginTop="-15dp">

            <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginTop="10dip"
              android:textSize="15dip" />

            <TextView
              android:id="@+id/txtForgotPassword"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dip"
              android:text="@string/forgot_pw"
              android:textSize="15dip"/>
          </TableRow>

            <TextView
                android:id="@+id/txtError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15dip"/>

            <CheckBox
                android:id="@+id/checkboxStayLogged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stay_logged_in"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/clickable"
                android:textColor="@android:color/white"
                android:text="@string/login"/>

            <TableRow>

                <TextView
                    android:id="@+id/txtNotRegistered"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dip"
                    android:text="@string/not_registered"
                    android:textSize="15dip" />
            </TableRow>


        </TableLayout>


        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/login_background"
            android:layout_below="@id/imgBus"
            />

    </RelativeLayout>

</ScrollView>
